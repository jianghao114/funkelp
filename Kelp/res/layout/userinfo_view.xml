<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/behind_color" >

    <RelativeLayout
        android:id="@+id/baseinfo_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp" >

        <ImageView
            android:id="@+id/head_pic"
            android:layout_width="71dp"
            android:layout_height="71dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/my_headpic"
            android:contentDescription="@string/app_name"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/head_pic"
            android:textColor="@color/menu_item_color"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/name"
            android:textColor="@color/red" />

        <TextView
            android:id="@+id/signnature"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_below="@id/name"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/head_pic"
            android:ellipsize="end"
            android:lines="2"
            android:textColor="@color/menu_item_color" />
    </RelativeLayout>


    <ScrollView
        android:id="@+id/scollView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/baseinfo_layout"
        android:paddingLeft="10dip"
        android:scrollbarThumbVertical="@drawable/base_list_scrollbar_handle" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dip"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/myBind"
                style="@style/menu_user_style_in_scroll"
                android:layout_width="fill_parent"
                android:layout_height="44dp"
                android:background="@drawable/menu_item_not_selected"
                android:text="@string/my_bind" />

            <TextView
                android:id="@+id/myChannel"
                style="@style/menu_user_style_in_scroll"
                android:layout_width="fill_parent"
                android:layout_height="44dp"
                android:background="@drawable/menu_item_not_selected"
                android:text="@string/my_function_channel" />

            <TextView
                android:id="@+id/myMedal"
                style="@style/menu_user_style_in_scroll"
                android:layout_width="fill_parent"
                android:layout_height="44dp"
                android:background="@drawable/menu_item_not_selected"
                android:text="@string/my_function_medal" />

            <TextView
                android:id="@+id/myZhuiju"
                style="@style/menu_user_style_in_scroll"
                android:layout_width="fill_parent"
                android:layout_height="44dp"
                android:background="@drawable/menu_item_not_selected"
                android:text="@string/my_function_zhuiju" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="44dp" >

                <ImageView
                    android:id="@+id/msg_pic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="90dip"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/mt_newinfo"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/myMsg"
                    style="@style/menu_user_style_in_scroll"
                    android:layout_width="fill_parent"
                    android:layout_height="44dp"
                    android:background="@drawable/menu_item_not_selected"
                    android:text="@string/my_msg" />
            </RelativeLayout>
             <TextView
                android:id="@+id/myCache"
                style="@style/menu_user_style_in_scroll"
                android:layout_width="fill_parent"
                android:layout_height="44dp"
                android:background="@drawable/menu_item_not_selected"
                android:text="@string/my_function_cache" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="44dp" >

                <TextView
                    android:id="@+id/mySetting"
                    style="@style/menu_user_style_in_scroll"
                    android:layout_width="fill_parent"
                    android:layout_height="44dp"
                    android:background="@drawable/menu_item_not_selected"
                    android:text="@string/my_setting" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="25dip"
                    android:background="@drawable/menu_user_setting"
                    android:contentDescription="@string/app_name" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="44dp" >

                <TextView
                    android:id="@+id/statement"
                    style="@style/menu_user_style_in_scroll"
                    android:layout_width="fill_parent"
                    android:layout_height="44dp"
                    android:background="@drawable/menu_item_not_selected"
                    android:text="@string/statement" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="25dip"
                    
                    android:contentDescription="@string/app_name" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/logoff_layout"
                android:layout_width="fill_parent"
                android:layout_height="44dp" >

                <TextView
                    android:id="@+id/zuxiao"
                    style="@style/menu_user_style_in_scroll"
                    android:layout_width="fill_parent"
                    android:layout_height="44dp"
                    android:background="@drawable/menu_item_not_selected"
                    android:text="@string/my_zuxiao" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="25dip"
                    android:background="@drawable/menu_user_zuxiao"
                    android:contentDescription="@string/app_name" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>